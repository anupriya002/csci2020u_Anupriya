<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>

<GridPane fx:controller="com.example.lab04.HelloController" xmlns:fx="http://javafx.com/fxml"
          alignment = "center" hgap ="10" vgap="10">

    <!--    //username-->
    <Label text = "Username: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!--   password -->
    <Label text = "Password: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!--   Full name -->
    <Label text = "Full Name: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="fullnameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!--   Email-->
    <Label text = "Email: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <!--  phone number -->
    <Label text = "Phone #: " GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <!--  date of birth -->
    <Label text = "Date of Birth: " GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <DatePicker fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Button fx:id="submitButton" text = "Submit" onAction="#handleSubmitButton" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    <Label fx:id="passwordLabel" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    <Label fx:id="fullnameLabel" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
    <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
    <Label fx:id="phoneLabel" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
    <Label fx:id="dateLabel" GridPane.columnIndex="1" GridPane.rowIndex="13"/>
</GridPane>